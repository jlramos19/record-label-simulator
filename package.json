{
  "scripts": {
    "dev": "vite",
    "prebuild": "node scripts/build-creator-portrait-manifest.mjs",
    "build": "vite build",
    "preview": "vite preview --port 5173",
    "typecheck": "tsc --noEmit",
    "emulators": "firebase emulators:start",
    "serve:local": "npm run build && firebase emulators:start --only hosting,auth,firestore",
    "preview:deploy": "npm run build && firebase hosting:channel:deploy playtest --expires 7d",
    "preview:open": "firebase hosting:channel:open playtest",
    "preview:list": "firebase hosting:channel:list",
    "deploy:hosting": "npm run build && firebase deploy --only hosting",
    "optimize:portraits": "node scripts/optimize-creator-portraits.mjs",
    "watch:portraits": "node scripts/optimize-creator-portraits.mjs --watch",
    "report:lines": "node scripts/report-line-counts.mjs",
    "lint": "eslint . --ext .js,.mjs,.cjs"
  },
  "devDependencies": {
    "chokidar": "^5.0.0",
    "eslint": "^8.57.0",
    "sharp": "^0.33.5",
    "typescript": "^5.9.3",
    "vite": "^6.0.0"
  },
  "dependencies": {
    "firebase": "^12.7.0"
  }
}
